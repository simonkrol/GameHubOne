<h1 style="text-align:center;">Create User</h1>
<%=form_for :user, url: users_path do |f| %> <!-- Submits the entered form to our create method within the users controller -->
	

	<% if @user.errors.any? %>
		<% @user.errors.each_with_index do |msg| %>
			<div class="alert alert-danger"><%= msg[1] %></div>
		<% end %>
	<% end %>
	<p>
	<div class="col-md-6 col-md-offset-3", style="margin-bottom:10">
		
		<%= f.label 'Name'%><br>
		<%= f.text_field(:name, {:class => 'form-control'}) %>
		<p></p>
		<%=f.label :address%><br>
		<%= f.text_field(:address, {:class => 'form-control'}) %>
		<p></p>
		<%=f.label :email%><br>
		<%= f.text_field(:email, {:class => 'form-control'}) %>
		<p></p>
		<%=f.label 'Password'%><br>
		<%= f.password_field(:password, {:class => 'form-control'}) %>
		<p></p>
		<%=f.label 'Confirm Password'%><br>
		<%= f.password_field(:password_confirmation, {:class => 'form-control'}) %>
		<p></p>
			<div style="text-align:center;">
		<%= f.submit("Create account", {:class => 'btn btn-primary'}) %>
		</div>

		</div>
	</p>
<% end %>