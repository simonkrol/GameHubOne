<% provide(:title, 'Users') %>
<div class="page-header">
    <h1>Users</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table">
    	    <thead>
          		<tr>
               		<th>#</th>
               		<th>Name</th>
               		<th>Username</th>
               		<th>Email</th>
           		</tr>
           	</thead>
	        <tbody>
            	<% @users.each do |user| %>
            		<tr>
            			<td><%= user.id %></td>
            			<td><%= user.name %></td>
            			<td><%= user.username %></td>
            			<td><%= user.email %></td>
            		</tr>
            	<% end %>
            </tbody>
        </table>
    </div>
</div>
        