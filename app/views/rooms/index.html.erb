<% provide(:title, 'Rooms') %>

<h3>Your Rooms</h3>
<div class="row">
    <div class="col-md-6">
        <table class="table">
    	    <thead>
          		<tr>
               		<th>#</th>
               		<th>Name</th>
               		<th>Owner</th>
               		<% if admin? %>
            			<th>Recent Activity</th>
            		<% end %>
               		
           		</tr>
           	</thead>
	        <tbody>
              <% @user=current_user %>
            	<% @user.rooms.each do |room| %>
            		<tr>
                  <% @owner = room.room_owners.user %>
            			<td><%= room.id %></td>
            			<td><%= link_to room.name, room %></td>
            			<td><%= link_to @owner.username, owner %></td>
            			<% if admin? %>
            				<td><%= room.updated_at %></td>
            			<% end %>

            		</tr>
            	<% end %>
            </tbody>
        </table>
    </div>
</div>
