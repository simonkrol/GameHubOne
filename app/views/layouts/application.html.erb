<!DOCTYPE html>
<html>
  <head>
    <title>Secrets</title>
   
    <%= csrf_meta_tags %>
 	<%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Secrets</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
        	   <li><%= link_to "Home", home_path %></li> 
          </ul>

          <% if logged_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Settings", '#' %></li> 
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Users", '#' %></li> 
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Profile", current_user %></li> 
            </ul>
            
            
          <% else %> 
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Log in", login_path %></li> <!--Returns /user/new-->
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Create Account", signup_path %></li> 
            </ul>
           
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    


    <div class="container">
      <%= yield %>
    </div>
  </body>
  <footer class="footer">
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="navbar-footer container">
        <ul class="nav navbar-nav navbar-left navbar-footer">
          <li><%= link_to "About", about_path %></li> 
        </ul>
        <ul class="nav navbar-nav navbar-left navbar-footer">
          <li><%= link_to "Contact", contact_path %></li> 
        </ul>
        <ul class="nav navbar-nav navbar-left navbar-footer">
          <li><%= link_to "Help", help_path %></li> 
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= link_to image_tag("rails.png", alt: "Rails logo", width: "60px"),
          'http://rubyonrails.org/' %>
        </ul>
      </div>
    </nav>
  </footer>
</html>